<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/scrollView"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="300dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:alpha="0.9"
                android:scaleType="fitXY"
                android:src="@drawable/banner"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:text="KRISHI-CREW"/>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:text="Planting the seeds of Tomorrow, Nurturing the seed of success Aggriculture with new prospective, Agriculture that works for future"/>



            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/read_more_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Read More"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/read_more_button"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"/>


        </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true">

               <androidx.cardview.widget.CardView
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   app:cardCornerRadius="15dp"
                   android:layout_margin="10dp"
                   android:elevation="20dp"
                   app:cardElevation="20dp">
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:src="@drawable/logo"/>
               </androidx.cardview.widget.CardView>

               <androidx.appcompat.widget.AppCompatButton
                   android:id="@+id/signInButton"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginEnd="10dp"
                   android:layout_marginBottom="10dp"
                   android:background="@drawable/button_rounded"
                   android:text="Sign In"
                   android:textAllCaps="false"
                   android:textColor="@color/black"
                   android:textSize="16sp" />

           </RelativeLayout>

        <LinearLayout
            android:id="@+id/images_layput_2"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="270dp"
            android:orientation="horizontal"
            android:weightSum="3">


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:layout_marginBottom="15dp"
                android:elevation="15dp"
                app:cardElevation="15dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_marginBottom="15dp"
                android:elevation="15dp"
                app:cardElevation="15dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img2"/>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:elevation="15dp"
                android:layout_marginBottom="15dp"
                app:cardElevation="15dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img3"/>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/images_layput_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/images_layput_2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_gravity="bottom"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:text="History \nand Origin"/>

            <TextView
                android:id="@+id/historyandorigindesc"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:text="@string/history_origin"
                android:background="@drawable/history_origin_background"/>



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/images_layput_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="15dp"
            android:layout_below="@id/images_layput_3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2A2A2A"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distinctive Features"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The majority of the people of Jammu and Kashmir are engaged in subsistence agriculture of diverse kinds on terraced slopes, each crop adapted to local conditions."
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:background="@drawable/button_rounded"
                                android:text="1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="2dp"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:text="Geography and Climate"/>



                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17sp"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="Southern and southwestern areas have a sub tropical climate, with hot summers and cool winters."/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:background="@drawable/button_rounded"
                                android:text="3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="2dp"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:text="Horticulture"/>



                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17sp"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="Horticulture is the cultivation of plants in gardens or greenhouses, as opposed to the field-scale production of crops characteristic of agriculture."/>




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:background="@drawable/button_rounded"
                                android:text="2"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="2dp"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:text="Saffron Cultivation"/>



                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17sp"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="The saffron grown in Pampore, Kashmir, is renowned worldwide for its quality."/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:background="@drawable/button_rounded"
                                android:text="4"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:layout_marginStart="2dp"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:text="Organic Farming"/>



                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="17sp"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="Many farmers in Jammu and Kashmir practice organic farming methods, prioritizing the use of natural fertilizers and pest control measures."/>



                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/distintive_feature_image"/>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>



            </LinearLayout>




        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/images_layput_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/images_layput_4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Agricultural Practices"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/terrace_farming"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginEnd="5dp"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:text="Terrace Farming"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/rice_cultivation"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#000000"
                        android:gravity="end"
                        android:textSize="12sp"
                        android:layout_marginEnd="5dp"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:text="Rice Cultivation"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/floriculture"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#FFFFFF"
                        android:gravity="end"
                        android:layout_marginEnd="5dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:text="Floriculture"/>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="3">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/sunflower"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:layout_marginEnd="5dp"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:text="Sunflower"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/livesculture"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#000000"
                        android:gravity="end"
                        android:textSize="12sp"
                        android:layout_marginEnd="5dp"
                        android:textStyle="bold"
                        android:layout_alignParentBottom="true"
                        android:text="Livestock"/>


                </RelativeLayout>



            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/images_layput_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#2A2A2A"
            android:layout_below="@id/images_layput_5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Contact Us"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_rounded"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:layout_marginEnd="20dp"
                android:paddingStart="15dp"
                android:hint="Enter your name"
                android:backgroundTint="@color/white"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_rounded"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"
                android:layout_marginEnd="20dp"
                android:paddingStart="15dp"
                android:hint="Enter your email"
                android:backgroundTint="@color/white"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_rounded"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                android:layout_marginEnd="20dp"
                android:paddingStart="15dp"
                android:hint="Enter your phone number"
                android:backgroundTint="@color/white"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/button_rounded"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:inputType="textLongMessage"
                android:layout_marginEnd="20dp"
                android:paddingStart="15dp"
                android:hint="Enter the message"
                android:backgroundTint="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/button_rounded"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:inputType="textPersonName"
                android:layout_marginEnd="20dp"
                android:paddingStart="15dp"
                android:hint="Send"/>




        </LinearLayout>



    </RelativeLayout>

</ScrollView>